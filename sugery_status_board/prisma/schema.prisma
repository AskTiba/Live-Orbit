generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Patient {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  patientNumber   String    @unique
  firstName       String
  lastName        String
  streetAddress   String?
  city            String?
  state           String?
  country         String?
  phoneNumber     String?
  contactEmail    String?
  status          String
  createdAt       DateTime  @default(now())
  statusUpdatedAt DateTime  @updatedAt
}